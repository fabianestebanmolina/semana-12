<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="row">
      <div class="col-md-5">

    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_product_path(product),class:'btn btn-info' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-warning'%></td>
      </tr>
    <% end %>
     </div>
    </div>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
